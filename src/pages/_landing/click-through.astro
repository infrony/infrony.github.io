---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Transformación Digital para tu Negocio',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Servicios de Transformación Digital"
    title="Impulsa el Crecimiento de tu Empresa con la Transformación Digital"
    subtitle="Descubre cómo podemos ayudarte a modernizar tu negocio con soluciones tecnológicas innovadoras."
    actions={[
      {
        variant: 'primary',
        text: 'Solicitar Cotización',
        href: 'https://wa.me/50765772083',
        icon: 'tabler:square-rounded-arrow-right',
      },
      { text: 'Más información', href: '/pricing' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwzNzMwNzV8MHwxfGFsbHwxfHx8fHx8fHwxNjY5NzUyODQx&ixlib=rb-4.0.3&q=80&w=1080',
      alt: 'Transformación Digital en Acción',
    }}
  />

  <!-- Call to Action ******************* -->

  <CallToAction
    title="¡Comienza la Transformación Digital Hoy!"
    subtitle="No te quedes atrás en la era digital. Nuestro equipo está listo para ayudarte a implementar estrategias tecnológicas que acelerarán el crecimiento de tu negocio."
    actions={[
      {
        variant: 'primary',
        text: 'Solicitar una Consulta',
        href: '/contact',
        icon: 'tabler:message-circle',
      },
      {
        text: 'Ver Casos de Éxito',
        href: '/casos-exito',
      },
    ]}
  />
</Layout>
