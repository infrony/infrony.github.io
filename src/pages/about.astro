---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Sobre Nosotros - Servitech Infrony',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Inicio', href: '/' },
        { text: 'Nosotros', href: '/about' },
        { text: 'Servicios', href: '/services' },
        { text: 'Planes', href: '/pricing' },
        { text: 'Blog', href: '/blog' },
        { text: 'Github', href: 'https://github.com/infrony' },
      ]}
      actions={[
        {
          text: 'Contáctanos',
          href: '/contact',
        },
      ]}
      isSticky
      showRssFeed
      showToggleTheme
    />
  </Fragment>

  <!-- Hero Section ******************* -->
  <Hero
    tagline="Impulsando tu Transformación Digital"
    image={{
      src: 'https://images.infrony.com/automated-process.jpg',
      alt: 'Automatización con IA',
    }}
  >
    <Fragment slot="title">
      Innovamos para que tu <br />
      <span class="text-accent dark:text-white highlight"> Negocio Crezca con IA</span>
    </Fragment>

    <Fragment slot="subtitle">
      En <span class="font-semibold">Servitech Infrony</span>, combinamos **Inteligencia Artificial** y tecnología de
      vanguardia para crear soluciones que automatizan procesos, optimizan tu presencia digital y potencian tu negocio
      con eficiencia y escalabilidad.
    </Fragment>
  </Hero>

  <!-- Stats Section ****************** -->
  <Stats
    title="Nuestros Números"
    stats={[
      { title: 'Años de Experiencia', amount: '10+' },
      { title: 'Procesos Automatizados', amount: '500+' },
      { title: 'Clientes Satisfechos', amount: '150+' },
      { title: 'Certificaciones en IA', amount: '30+' },
    ]}
  />

  <!-- Features3 Section ****************** -->
  <Features3
    title="¿Por qué Elegirnos?"
    subtitle="Soluciones Inteligentes para un Mundo Digital"
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Automatización con IA',
        description:
          'Implementamos herramientas de IA como Make.com y n8n para eliminar tareas repetitivas y mejorar tu productividad.',
        icon: 'tabler:settings-automation',
      },
      {
        title: 'Desarrollo de Software a Medida',
        description:
          'Creamos aplicaciones web y móviles personalizadas que se adaptan a las necesidades de tu negocio.',
        icon: 'tabler:code',
      },
      {
        title: 'Integración de APIs',
        description:
          'Conectamos tus sistemas digitales para una gestión fluida de la información con flujos de trabajo automatizados.',
        icon: 'tabler:arrows-join',
      },
    ]}
  />

  <!-- Features3 Section ****************** -->
  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Automatización de Correos con IA',
        description:
          'Configura respuestas automáticas y clasificación inteligente para gestionar tu comunicación sin esfuerzo.',
        icon: 'tabler:mail',
      },
      {
        title: 'Extracción de Datos desde Documentos',
        description:
          'Extraemos información de documentos PDF y archivos escaneados usando inteligencia artificial avanzada.',
        icon: 'tabler:file-description',
      },
      {
        title: 'Consultoría en IA y Transformación Digital',
        description:
          'Evaluamos tu infraestructura digital y diseñamos una estrategia a medida para maximizar tus resultados con IA.',
        icon: 'tabler:brain',
      },
    ]}
    image={{
      src: 'https://images.infrony.com/consulting-team.jpg',
      alt: 'Equipo de consultoría en IA',
    }}
  />

  <!-- Steps2 Section ****************** -->
  <Steps2
    title="Nuestra Metodología de Trabajo"
    subtitle="Seguimos un proceso estructurado para garantizar resultados excepcionales."
    items={[
      {
        title: 'Evaluación Inicial',
        description: 'Analizamos tu negocio y detectamos las áreas con mayor potencial para la automatización con IA.',
      },
      {
        title: 'Desarrollo e Implementación',
        description:
          'Creamos flujos de trabajo automatizados y personalizamos tus herramientas para maximizar la eficiencia.',
      },
      {
        title: 'Optimización Continua',
        description:
          'Monitoreamos el rendimiento de tus procesos automatizados y ajustamos para mejorar los resultados.',
      },
    ]}
  />

  <!-- Steps2 Section ****************** -->
  <Steps2
    title="Nuestros Valores"
    subtitle="Principios que guían nuestro éxito y el de nuestros clientes."
    isReversed={true}
    callToAction={{
      text: 'Conoce más sobre nuestra historia',
      href: '/about',
    }}
    items={[
      {
        title: 'Innovación Constante',
        description: 'Adoptamos tecnologías emergentes y seguimos aprendiendo para mantenernos a la vanguardia.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Enfoque en Resultados',
        description: 'Cada solución que implementamos está diseñada para ofrecer un impacto medible y positivo.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Transparencia y Ética',
        description:
          'Trabajamos con integridad, asegurando siempre la seguridad y privacidad de los datos de nuestros clientes.',
        icon: 'tabler:shield-check',
      },
    ]}
  />

  <!-- Features2 Section ****************** -->
  <Features2
    title="Nuestra Ubicación y Alcance"
    tagline="Conectamos con Empresas a Nivel Global"
    columns={1}
    items={[
      {
        title: 'Panamá, Ciudad de Panamá',
        description:
          'Desde nuestra sede, ofrecemos soluciones tecnológicas a empresas de todo el mundo, proporcionando servicios tanto presenciales como remotos.',
      },
      {
        title: 'Atención Global',
        description:
          'Contamos con clientes en distintos países, adaptando nuestras soluciones a múltiples mercados y necesidades.',
      },
    ]}
  />
</Layout>
