---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Header from '~/components/widgets/Header.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Servicios de Transformación Digital y Automatización con IA',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Inicio', href: '/' },
        { text: 'Nosotros', href: '/about' },
        { text: 'Servicios', href: '/services' },
        { text: 'Planes', href: '/pricing' },
        { text: 'Blog', href: '/blog' },
        { text: 'Github', href: 'https://github.com/infrony' },
      ]}
      actions={[
        {
          text: 'Contáctanos',
          href: '/contact',
        },
      ]}
      isSticky
      showRssFeed
      showToggleTheme
    />
  </Fragment>

  <!-- Hero Section ******************* -->

  <Hero
    tagline="Impulsa tu Negocio con IA y Desarrollo Personalizado"
    title="Automatización Inteligente y Soluciones a la Medida"
    subtitle="Simplifica tus procesos empresariales con soluciones de inteligencia artificial y software desarrollado para adaptarse a las necesidades específicas de tu negocio."
    actions={[{ variant: 'primary', target: '_blank', text: 'Explora Nuestros Servicios', href: '/services' }]}
    image={{
      src: 'https://images.infrony.com/servicios-infrony.png',
      alt: 'Automatización Empresarial con IA',
    }}
  />

  <!-- Features Section ******************* -->

  <Features2
    title="Nuestros Servicios Destacados"
    subtitle="Explora nuestras soluciones tecnológicas diseñadas para transformar tu empresa."
    columns={3}
    items={[
      {
        title: 'Automatización con IA',
        description:
          'Automatizamos tus flujos de trabajo con herramientas como n8n y Make.com para eliminar tareas repetitivas y mejorar la productividad.',
        icon: 'tabler:settings-automation',
      },
      {
        title: 'Consultoría en Transformación Digital',
        description:
          'Te guiamos para implementar la tecnología adecuada, optimizando tus procesos y reduciendo costos operativos.',
        icon: 'tabler:brain',
      },
      {
        title: 'Desarrollo de Software a la Medida',
        description:
          'Creamos aplicaciones web y móviles personalizadas que se adaptan a las necesidades específicas de tu negocio.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Integración de APIs y Conectividad',
        description:
          'Conectamos tus herramientas y plataformas para un flujo de datos fluido y centralizado entre tus sistemas.',
        icon: 'tabler:link',
      },
      {
        title: 'Automatización de Correos y Gestión de Datos',
        description:
          'Implementamos sistemas de respuestas automáticas y gestión de datos para una comunicación más eficiente.',
        icon: 'tabler:mail',
      },
      {
        title: 'E-commerce y Tiendas Online',
        description:
          'Implementamos soluciones de comercio electrónico seguras y escalables con pasarelas de pago integradas.',
        icon: 'tabler:shopping-cart',
      },
    ]}
  />

  <!-- Content Section **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Soluciones 100% Personalizadas',
        description:
          'Adaptamos nuestras soluciones de IA y software a tus necesidades específicas, garantizando una transformación digital efectiva.',
        icon: 'tabler:wand',
      },
      {
        title: 'Soporte y Mantenimiento Continuo',
        description:
          'Brindamos soporte técnico proactivo para asegurar la operatividad continua de tus soluciones digitales.',
        icon: 'tabler:lifebuoy',
      },
      {
        title: 'Estrategias Digitales con Impacto',
        description:
          'Desarrollamos estrategias de automatización y presencia digital que generan resultados tangibles en tu empresa.',
        icon: 'tabler:trending-up',
      },
    ]}
    image={{
      src: 'https://images.infrony.com/colaboracion-trabajo-equipo.png',
      alt: 'Consultoría en Transformación Digital',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Nuestro Compromiso con tu Éxito
      </h3>
    </Fragment>
  </Content>

  <!-- Testimonials Section *********** -->

  <Testimonials
    title="Lo que Dicen Nuestros Clientes"
    testimonials={[
      {
        testimonial: `Gracias a la automatización con IA que implementaron, ahora gestionamos nuestra base de clientes con mayor rapidez y eficiencia.`,
        name: 'Carlos Pérez',
        job: 'Director de Ventas',
        image: {
          src: 'https://images.infrony.com/mujer-profesional.png',
          alt: 'Carlos Pérez Testimonio',
        },
      },
      {
        testimonial: `El software a medida que desarrollaron para nuestro negocio ha mejorado la experiencia del cliente de manera excepcional.`,
        name: 'María Rodríguez',
        job: 'CEO - Startup Digital',
        image: {
          src: 'https://images.infrony.com/ana-perez.jpg',
          alt: 'María Rodríguez Testimonio',
        },
      },
      {
        testimonial: `El soporte técnico ha sido impecable. Gracias a Servitech Infrony, nuestra web siempre está actualizada y funcionando a la perfección.`,
        name: 'José Gómez',
        job: 'Consultor Independiente',
        image: {
          src: 'https://images.infrony.com/carlos-gomez.jpg',
          alt: 'José Gómez Testimonio',
        },
      },
    ]}
  />

  <!-- CallToAction Section *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Habla con un Experto',
        href: '/contact',
      },
    ]}
    title="¿Listo para Automatizar tu Negocio con IA?"
    subtitle="Contáctanos hoy y descubre cómo transformar tu negocio con automatización inteligente y soluciones digitales personalizadas."
  />
</Layout>
