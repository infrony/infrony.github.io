---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="¡Conectemos!" />

  <ContactUs
    id="form"
    title="Envíanos un mensaje hoy mismo"
    subtitle="Si necesitas una respuesta rápida, explora nuestra sección de Preguntas Frecuentes. ¡Puede que encuentres la solución que buscas allí! Si no, nuestro equipo de soporte estará encantado de ayudarte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo Electrónico',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label: 'Al enviar este formulario de contacto, reconoces y aceptas la recopilación de tu información personal.',
    }}
    description="Nuestro equipo de soporte suele responder dentro de las 24 horas hábiles."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="¡Estamos aquí para ayudarte!"
    items={[
      {
        title: 'Soporte General',
        description: `Contáctanos para consultas relacionadas con la gestión de cuentas, navegación del sitio web, problemas de pago, acceso a servicios contratados o cualquier otra pregunta sobre nuestras funcionalidades.`,
      },
      {
        title: 'Contacta a Ventas',
        description:
          'Habla con nosotros para preguntas sobre compras, opciones de personalización, licencias para uso comercial o cualquier duda sobre nuestros servicios.',
      },
      {
        title: 'Soporte Técnico',
        description:
          'Contáctanos si enfrentas problemas técnicos como instalación, dificultades de edición, problemas de compatibilidad con software o cualquier otro reto técnico relacionado con nuestros servicios.',
      },
      {
        title: 'Teléfono / WhatsApp',
        description: '+507 65772083',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'hola@infrony.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Panamá, Las Cumbres',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
