---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = 'Error 404 - Página No Encontrada';
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16 bg-gray-50 dark:bg-gray-900">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl text-primary">
          <span class="sr-only">Error</span>
          404
        </h2>
        <p class="text-3xl font-semibold md:text-3xl text-gray-800 dark:text-white">
          Oops, no pudimos encontrar esta página.
        </p>
        <p class="mt-4 mb-8 text-lg text-gray-600 dark:text-gray-400">
          Pero no te preocupes, estamos aquí para ayudarte. Puedes regresar a nuestra página principal y explorar todo
          lo que ofrecemos.
        </p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn btn-primary">
          Volver a la página principal
        </a>
      </div>
    </div>
  </section>
</Layout>
