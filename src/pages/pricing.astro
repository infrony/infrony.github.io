---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Header from '~/components/widgets/Header.astro';

const metadata = {
  title: 'Planes de Diseño Web',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Inicio', href: '/' },
        { text: 'Nosotros', href: '/about' },
        { text: 'Servicios', href: '/services' },
        { text: 'Planes', href: '/pricing' },
        { text: 'Blog', href: '/blog' },
        { text: 'Github', href: 'https://github.com/infrony' },
      ]}
      actions={[
        {
          text: 'Contáctanos',
          href: '/contact',
        },
      ]}
      isSticky
      showRssFeed
      showToggleTheme
    />
  </Fragment>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Planes de Diseño Web"
    title="Elige el plan que se ajuste a tus necesidades"
    subtitle="Nuestras soluciones están diseñadas para ofrecerte lo mejor en rendimiento y diseño."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Nuestros Paquetes"
    subtitle="Solo paga por lo que realmente necesitas"
    prices={[
      {
        title: 'Landing Page',
        subtitle: 'Ideal para emprendedores o pequeñas empresas',
        price: 199,
        period: 'Pago único',
        items: [
