  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="¿Listo para impulsar tu presencia online?"
    subtitle="Únete a nuestros clientes satisfechos y transforma tu sitio web con nosotros."
    actions={[
      {
        variant: 'primary',
        text: 'Comienza ahora',
        href: 'https://wa.me/message/NQ2M2DC3AEDZD1',
      },
    ]}
