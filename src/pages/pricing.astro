          },
          {
            description: 'Hosting y dominio GRATIS por 1 año',
          },
          {
            description: 'Mantenimiento y soporte por 3 meses',
          },
          {
            description: 'Sitio listo en 15 días',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Empieza ahora',
          href: 'https://www.paypal.com/ncp/payment/978LZZG3AM96G',
        },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
      {
        title: 'E-commerce',
        subtitle: 'Solución completa para tiendas online',
        price: 999,
        period: 'Pago único',
        items: [
          {
