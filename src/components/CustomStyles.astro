---
import '@fontsource/poppins';
import '@fontsource/ibm-plex-sans';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'IBM Plex Sans', sans-serif;
    --aw-font-heading: 'Poppins', sans-serif;

    --aw-color-primary: #a2c539; /* Verde Limón */
    --aw-color-secondary: #3a3a3a; /* Gris Oscuro */
    --aw-color-accent: #f0f0f0; /* Gris Claro */

    --aw-color-text-heading: #3a3a3a; /* Gris Oscuro para Encabezados */
    --aw-color-text-default: #333333; /* Gris Neutro */
    --aw-color-text-muted: #3a3a3a; /* Gris Oscuro para texto secundario */
    --aw-color-bg-page: #ffffff; /* Fondo Blanco */

    --aw-color-bg-page-dark: #2e2e2e; /* Fondo Oscuro para modo noche */

    ::selection {
      background-color: #a2c539; /* Verde Limón para selección de texto */
      color: #ffffff;
    }
  }

  .dark {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'IBM Plex Sans', sans-serif;
    --aw-font-heading: 'Poppins', sans-serif;

    --aw-color-primary: #a2c539; /* Mantén el verde para consistencia */
    --aw-color-secondary: #3a3a3a;
    --aw-color-accent: #f0f0f0;

    --aw-color-text-heading: #f0f0f0; /* Texto claro en modo oscuro */
    --aw-color-text-default: #e0e0e0;
    --aw-color-text-muted: #b0b0b0;
    --aw-color-bg-page: #2e2e2e; /* Fondo gris oscuro para una experiencia cómoda */

    ::selection {
      background-color: #3a3a3a; /* Selección de texto en gris oscuro */
      color: #ffffff;
    }
  }
</style>
