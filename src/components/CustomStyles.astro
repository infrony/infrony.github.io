---
import '@fontsource/poppins';
import '@fontsource/ibm-plex-sans';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'IBM Plex Sans', sans-serif;
    --aw-font-heading: 'Poppins', sans-serif;

    --aw-color-primary: rgb(32, 56, 96); /* Azul oscuro para profesionalismo */
    --aw-color-secondary: rgb(51, 102, 153); /* Azul intermedio para cohesi贸n */
    --aw-color-accent: rgb(42, 157, 143); /* Verde azulado para resaltar accesibilidad */

    --aw-color-text-heading: rgb(0, 0, 0); /* Negro para claridad en encabezados */
    --aw-color-text-default: rgb(33, 37, 41); /* Gris oscuro para buena legibilidad */
    --aw-color-text-muted: rgb(108, 117, 125); /* Gris suave para texto secundario */
    --aw-color-bg-page: rgb(248, 249, 250); /* Blanco suave para menos contraste */

    --aw-color-bg-page-dark: rgb(15, 23, 42); /* Azul oscuro para un fondo elegante */

    ::selection {
      background-color: rgb(42, 157, 143); /* Verde azulado para selecci贸n de texto */
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'IBM Plex Sans', sans-serif;
    --aw-font-heading: 'Poppins', sans-serif;

    --aw-color-primary: rgb(32, 56, 96); /* Mantiene la cohesi贸n en modo oscuro */
    --aw-color-secondary: rgb(51, 102, 153);
    --aw-color-accent: rgb(42, 157, 143);

    --aw-color-text-heading: rgb(236, 239, 241); /* Texto claro para modo oscuro */
    --aw-color-text-default: rgb(229, 236, 246);
    --aw-color-text-muted: rgb(229, 236, 246 / 66%);
    --aw-color-bg-page: rgb(15, 23, 42); /* Fondo oscuro que cuida los ojos */

    ::selection {
      background-color: rgb(109, 40, 217); /* Morado innovador para la selecci贸n */
      color: white;
    }
  }
</style>
